{% extends '@SeraphMedia/base.html.twig' %}

{% block title %}Modify file{% endblock %}

{% block body %}
    {{ form_start(form) }}
    {% block form_fields %}
        <div class="card-body">
            <div class="form-group">
                <label for="media_file">{{ form_label(form.file) }}</label>
                {{ form_widget(form.file) }}
            </div>
            <div class="form-group">
                <label for="media_group">{{ form_label(form.group) }}</label>
                {{ form_widget(form.group) }}
            </div>
            <div class="form-group">
                <label for="media_user">{{ form_label(form.user) }}</label>
                {{ form_widget(form.user) }}
            </div>
        </div>
    {% endblock %}
    {% block form_actions %}
        <div class="card-footer">
            <button class="btn btn-sm btn-outline-success mr-2" type="submit">
                <i class="fas fa-plus mr-1"></i>
                Modify
            </button>
            <button class="btn btn-sm btn-outline-danger mr-2" type="reset">
                <i class="fas fa-undo mr-1"></i>
                Reset
            </button>
            <a href="{{ path('seraph-list-file') }}" class="btn btn-sm btn-outline-secondary">
                <i class="fas fa-arrow-left mr-1"></i>
                Back
            </a>
        </div>
    {% endblock %}
    {{ form_end(form) }}
{% endblock %}